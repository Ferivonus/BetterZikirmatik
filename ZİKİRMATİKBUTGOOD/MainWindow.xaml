<Window x:Class="ZİKİRMATİKBUTGOOD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zikirmatik" Height="400" Width="300" Background="#111111">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Name="ZikirLabel" Text="0" 
                   FontSize="72" Foreground="#00ff00"
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <Button Content="Zikir +1" Width="200" Height="50" Click="ZikirButton_Click"
                Background="#ff00ff" Foreground="White" FontSize="18" Margin="0,0,0,10"/>

        <Button Content="Sıfırla" Width="200" Height="40" Click="ResetButton_Click"
                Background="#444" Foreground="White" FontSize="16"/>
    </StackPanel>
</Window>
